{
    "name": "agau-token",
    "version": "1.0.0",
    "description": "Repo containing smart contracts",
    "keywords": [
        "solidity",
        "contracts",
        "protocol",
        "blockchain",
        "ethereum",
        "web3",
        "foundry",
        "forge",
        "hardhat",
        "ethers",
        "typescript"
    ],
    "author": "Aether",
    "license": "UNLICENSED",
    "repository": {
        "type": "git",
        "url": "git+https://github.com/agau-company/blockchain-token-new.git"
    },
    "files": [
        "/deployments.json",
        "/artifacts/contracts/**/*.json",
        "!/artifacts/contracts/test/**/*.json",
        "/build/**",
        "/contracts/**/*.sol",
        "!/contracts/test/**/*"
    ],
    "scripts": {
        "build": "forge build",
        "clean": "forge clean; npx hardhat clean; rm -rf coverage.json artifacts/ build/ cache/ coverage/ example/ node_modules/ types/",
        "coverage": "forge coverage",
        "prepare": "npm run typechain",
        "full-deploy": "npx hardhat run scripts/run-full-deploy.ts --network",
        "full-deploy-v2": "npx hardhat run scripts/run-full-deploy-v2.ts --network sepolia",
        "full-deploy-v2-bsc": "npx hardhat run scripts/run-full-deploy-v2.ts --network bsc",
        "full-deploy-v2-local": "npx hardhat run scripts/run-full-deploy-v2.ts --network hardhat",
        "full-deploy:dev": "TENDERLY_AUTO_VERIFY=TRUE npm run full-deploy tenderly",
        "test-mintandlock": "npx hardhat run scripts/signature/verify_MintAndLock.ts",
        "transfer-ownership": "npm run dry-run:transfer-ownership && npx hardhat run scripts/run-transfer-ownership.ts --network",
        "prepare-upgrade": "npx hardhat run scripts/prepare-upgrade.ts --network",
        "prettier-contracts": "npx prettier --write --plugin=prettier-plugin-solidity 'contracts/**/*.sol' 'tests/**/*.sol'",
        "prettier-scripts": "npx prettier --write 'scripts/**/*.ts'",
        "typechain": "npx hardhat typechain",
        "update": "forge update && npm upgrade",
        "test:unit": "forge test",
        "test:integration": "FOUNDRY_PROFILE=integration forge test",
        "dry-run:deploy": "npx hardhat test tests/ts/scripts/full-deploy.ts",
        "dry-run:transfer-ownership": "npx hardhat test tests/ts/scripts/transfer-ownership.ts",
        "benchmark": "FOUNDRY_PROFILE=gas forge test",
        "benchmark:snapshot": "FOUNDRY_PROFILE=gas forge snapshot -vvv"
    },
    "devDependencies": {
        "@nomicfoundation/hardhat-network-helpers": "^1.0.10",
        "@nomicfoundation/hardhat-toolbox": "^3.0.0",
        "@nomiclabs/hardhat-solhint": "^3.0.1",
        "@openzeppelin/contracts": "^5.0.0",
        "@openzeppelin/contracts-upgradeable": "^5.0.0",
        "@openzeppelin/hardhat-upgrades": "^2.4.1",
        "@tenderly/hardhat-tenderly": "^2.0.1",
        "@typescript-eslint/eslint-plugin": "^5.48.0",
        "@typescript-eslint/parser": "^5.48.0",
        "dotenv": "^16.0.3",
        "eslint": "^8.31.0",
        "eslint-config-prettier": "^8.6.0",
        "eslint-plugin-node": "^11.1.0",
        "eslint-plugin-prettier": "^4.2.1",
        "hardhat": "^2.17.3",
        "hardhat-console": "^1.0.0",
        "hardhat-preprocessor": "^0.1.5",
        "prettier": "^3.2.4",
        "prettier-plugin-solidity": "^1.3.1",
        "readline-sync": "^1.4.10",
        "solhint-plugin-prettier": "^0.1.0",
        "toml": "^3.0.0",
        "ts-node": "^10.9.1",
        "typechain": "^8.3.2",
        "typescript": "^5.2.2"
    }
}